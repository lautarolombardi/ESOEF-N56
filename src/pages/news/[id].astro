---
import DetailPage from "@/components/common/DetailPage.astro";
import { news } from "@/data/news";
import Layout from "@/layouts/Layout.astro";
const { id } = Astro.params;
const novelty = news.find((novelty) => novelty.id === id);
const { title, description, media, mediaType, date, link } = novelty;
---

<Layout title="Novedades" description="Novedades">
  <DetailPage
    title={title}
    description={description}
    media={media}
    date={date}
    mediaType={mediaType}
    link={link}
    cardType="news"
  />
</Layout>
