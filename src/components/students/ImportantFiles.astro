---
import ClockIcon from "@/icons/Clock.astro";
import FileIcon from "@/icons/File.astro";
---

<div
  class="flex flex-col items-center gap-5 md:flex-row md:justify-center md:gap-10"
>
  <div
    class="h-[300px] w-full max-w-[400px] relative cursor-pointer overflow-hidden schedules"
  >
    <img
      class="h-full object-cover object-center border border-tertiary"
      src="horarios.png"
      alt="Horarios"
    />
    <div
      class="absolute bg-[#2689f2c3] text-white text-2xl h-full w-full top-0 left-0 z-20 flex items-center justify-center font-bold transition-all duration-500 btn-hover lg:translate-x-full"
    >
      <a
        class="flex items-center gap-3 transition-all duration-300 hover:underline"
        href="https://docs.google.com/document/d/12N-4i7LKZ3qk7ba1cBtjem7lniYue0ah/edit?usp=drivesdk&ouid=111141329733704389804&rtpof=true&sd=true"
        target="_blank"><ClockIcon class="w-7" />Horarios</a
      >
    </div>
  </div>
  <div
    class="relative h-[300px] w-full max-w-[400px] cursor-pointer overflow-hidden booklets"
  >
    <img
      class="h-full object-cover object-center border border-tertiary"
      src="cuadernillos.png"
      alt="Cuadernillos"
    />
    <div
      class="absolute bg-[#2689f2c3] text-white text-2xl h-full w-full top-0 left-0 z-20 flex items-center justify-center font-bold transition-all duration-500 btn-hover lg:translate-x-full"
    >
      <a
        class="flex items-center gap-3 transition-all duration-300 hover:underline"
        target="_blank"
        href="https://drive.google.com/drive/u/2/folders/1qsJQcVAyW_Uk_1wA9T2gXs6oRsf_VRyN"
        ><FileIcon class="w-7" />Cuadernillos</a
      >
    </div>
  </div>
</div>

<style>
  .schedules:hover .btn-hover {
    transform: translateX(0);
  }

  .booklets:hover .btn-hover {
    transform: translateX(0);
  }
</style>
